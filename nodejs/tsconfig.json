{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "auto",
    "baseUrl": ".",
    "paths": {
      "@types/*": [
        "src/types/*"
      ]
    },
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "removeComments": true,
    "isolatedModules": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "ESNext"
    ]
  },
  "include": [
    "src/**/*",
    "src/dev.ts",
    "functions/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}